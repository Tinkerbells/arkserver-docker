# ARK Server Configuration
# Основные настройки сервера
ARK_SESSION_NAME=Danya ARK Server
ARK_SERVER_MAP=Fjordur
ARK_ADMIN_PASSWORD=lena2001
ARK_SERVER_PASSWORD=lena2001
ARK_MAX_PLAYERS=2

# Порты - используют стандартные значения в docker-compose
ARK_QUERY_PORT=27015
ARK_GAME_PORT=7778
ARK_RCON_PORT=32330

# Настройки обновлений и резервных копий
ARK_AUTO_UPDATE_ON_START=true
ARK_WARN_MINUTES=15
ARK_BACKUP_ON_START=false
ARK_VALIDATE_SAVE_EXISTS=false

# Моды (ID модов через запятую)
ARK_GAME_MOD_IDS=

# Дополнительные настройки
ARK_ALT_SAVE_DIRECTORY_NAME=SavedArks
ARK_LOG_RCON_CHAT=0
ARK_FLAG_CROSSPLAY=false

# Игровые множители (базовые)
ARK_XP_MULTIPLIER=5.0
ARK_ENABLE_PVE_GAMMA=true
ARK_ENABLE_PVP_GAMMA=true
ARK_ALLOW_CAVE_BUILDING_PVE=true
ARK_DIFFICULTY_OFFSET=1
ARK_NIGHT_TIME_SPEED_SCALE=2.0
ARK_DISABLE_STRUCTURE_PLACEMENT_COLLISION=true
ARK_ALWAYS_ALLOW_STRUCTURE_PICKUP=true
ARK_SHOW_MAP_PLAYER_LOCATION=true
ARK_SHOW_FLOATING_DAMAGE_TEXT=true
ARK_SERVER_CROSSHAIR=true

# Кластер
ARK_CLUSTER_ENABLED=false
ARK_CLUSTER_ID=MyGameCluster

# Docker ресурсы
DOCKER_MEMORY_LIMIT=8g
DOCKER_CPU_LIMIT=4
